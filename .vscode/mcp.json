{
  "inputs": [
    {
      "id": "ynab-api-token",
      "type": "promptString",
      "password": true,
      "description": "Enter your YNAB API Token"
    }
  ],
  "servers": {
    "ynab": {
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/YnabMcpServer/YnabMcpServer.csproj"
      ],
      "env": {
        "YNAB_API_TOKEN": "${input:ynab-api-token}"
      }
    }
  }
}
